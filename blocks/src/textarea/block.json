{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "hizzle-forms/textarea",
  "title": "Textarea field",
  "description": "A textarea field input for forms.",
  "category": "hizzle-forms",
  "keywords": [
    "form",
    "contact",
    "textarea"
  ],
  "icon": "editor-justify",
  "parent": [
    "hizzle-forms/form"
  ],
  "version": "1.0.0",
  "textdomain": "hizzle-forms",
  "attributes": {
    "label": {
      "type": "string",
      "default": "",
      "source": "html",
      "selector": "label"
    },
    "placeholder": {
      "type": "string",
      "default": "",
      "source": "attribute",
      "selector": "input",
      "attribute": "placeholder"
    },
    "required": {
      "type": "boolean",
      "default": false,
      "source": "attribute",
      "selector": "input",
      "attribute": "required"
    },
    "help": {
      "type": "string",
      "default": "",
      "source": "html",
      "selector": ".form-text"
    }
  },
  "example": {
    "attributes": {
      "label": "Textarea",
      "placeholder": "Placeholder text",
      "required": true,
      "help": "Help text"
    }
  },
  "supports": {
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "editorScript": "file:./index.js"
}